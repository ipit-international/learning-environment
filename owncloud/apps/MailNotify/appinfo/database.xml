<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
    <name>*dbname*</name>
    <create>true</create>
    <overwrite>false</overwrite>
    <charset>utf8</charset>
    <table>
        <name>*dbprefix*mn_items</name>
        <declaration>
            <field>
                <name>id</name>
                <type>integer</type>
                <default>0</default>
                <notnull>true</notnull>
                <autoincrement>1</autoincrement>
            </field>
            <field>
                <name>nid</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>64</length>
            </field>
            <field>
                <name>transmissionid</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>64</length>
            </field>
            <field>
                <name>notificationtype</name>
                <type>integer</type>
                <notnull>true</notnull>
            </field>
            <field>
                <name>origin</name>
                <type>text</type>
                <notnull>true</notnull>
                <length>512</length>
            </field>
            <field>
                <name>recipients</name>
                <type>text</type>
                <length>2048</length>
            </field>
            <field>
                <name>subject</name>
                <type>text</type>
                <length>128</length>
            </field>
            <field>
                <name>message</name>
                <type>text</type>
                <length>2048</length>
            </field>
            <field>
                <name>ncode</name>
                <type>text</type>
                <length>64</length>
            </field>
            <field>
                <name>timestamp</name>
                <type>integer</type>
                <notnull>true</notnull>
            </field>
            <field>
                <name>sentflag</name>
                <type>integer</type>
                <default>0</default>
                <notnull>true</notnull>
            </field>
        </declaration>
    </table>
</database>